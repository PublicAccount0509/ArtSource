<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
	<class name="Ets.SingleApi.Model.Repository.CustomizationOptionEntity, Ets.SingleApi.Model" table="CustomizationOption" dynamic-update="true" optimistic-lock="all" >
	 <!--The cache-->
	 <cache usage="read-write"/>
	 <!--The primary keys-->
		<id name="OptionId" column="OptionID" type="Int32" >
			<generator class="native"/>
		</id>
		<!--The propertys-->
		<property name="OptionTitle" column="OptionTitle" type="String" />
		<property name="Price" column="Price" type="Decimal" not-null="false" />
		<!--The foreign keys-->
		<many-to-one name="OptionGroup" class="Ets.SingleApi.Model.Repository.OptionGroupEntity, Ets.SingleApi.Model" column="OptionGroupID" />
	</class>
</hibernate-mapping>