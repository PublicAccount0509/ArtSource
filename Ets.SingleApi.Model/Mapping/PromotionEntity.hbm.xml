<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
	<class name="Ets.SingleApi.Model.Repository.PromotionEntity, Ets.SingleApi.Model" table="Promotion" dynamic-update="true" optimistic-lock="all" >
	 <!--The cache-->
	 <cache usage="read-write"/>
	 <!--The primary keys-->
		<id name="PromotionId" column="PromotionID" type="Int32" >
			<generator class="native"/>
		</id>
		<!--The propertys-->
		<property name="CampaignId" column="CampaignID" type="Int32" />
		<property name="PromotionCode" column="PromotionCode" type="String" not-null="false" />
		<property name="Title" column="Title" type="String" />
		<property name="Description" column="Description" type="String" />
		<property name="Discount" column="Discount" type="Decimal" />
		<property name="QtyThreshold" column="QtyThreshold" type="Int32" />
		<property name="InventoryGoal" column="InventoryGoal" type="Int32" />
		<property name="RevenueGoal" column="RevenueGoal" type="Decimal" />
		<property name="DateBegin" column="DateBegin" type="Timestamp" not-null="false" />
		<property name="DateEnd" column="DateEnd" type="Timestamp" />
		<property name="IsActive" column="IsActive" type="Boolean" />
		<property name="CreatedOn" column="CreatedOn" type="Timestamp" not-null="false" />
		<property name="CreatedBy" column="CreatedBy" type="String" not-null="false" />
		<property name="ModifiedOn" column="ModifiedOn" type="Timestamp" not-null="false" />
		<property name="ModifiedBy" column="ModifiedBy" type="String" not-null="false" />
		<!--The foreign keys-->
		<many-to-one name="Supplier" class="Ets.SingleApi.Model.Repository.SupplierEntity, Ets.SingleApi.Model" column="SupplierID" />
	</class>
</hibernate-mapping>