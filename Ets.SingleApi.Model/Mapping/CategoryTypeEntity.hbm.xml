<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
	<class name="Ets.SingleApi.Model.Repository.CategoryTypeEntity, Ets.SingleApi.Model" table="CategoryType" dynamic-update="true" optimistic-lock="all" >
	 <!--The cache-->
	 <cache usage="read-write"/>
	 <!--The primary keys-->
		<id name="CategoryTypeId" column="CategoryTypeID" type="Int32" >
			<generator class="native"/>
		</id>
		<!--The propertys-->
		<property name="CategoryType" column="CategoryType" type="String" />
		<!--The foreign keys-->
		<bag name="CategoryList" cascade="none" lazy="true" table="Category">
			<key column="CategoryTypeID" />
			<one-to-many class="Ets.SingleApi.Model.Repository.CategoryEntity, Ets.SingleApi.Model" />
		</bag>
	</class>
</hibernate-mapping>