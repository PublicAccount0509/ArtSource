<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
	<class name="Ets.SingleApi.Model.Repository.SupplierImageEntity, Ets.SingleApi.Model" table="SupplierImage" dynamic-update="true" optimistic-lock="all" >
	 <!--The cache-->
	 <cache usage="read-write"/>
	 <!--The primary keys-->
		<id name="SupplierImageId" column="SupplierImageID" type="Int32" >
			<generator class="native"/>
		</id>
		<!--The propertys-->
		<property name="ImagePath" column="ImagePath" type="String" />
		<property name="Online" column="Online" type="Boolean" not-null="false" />
		<property name="Position" column="Position" type="Int32" />
		<property name="WIdth" column="Width" type="Int32" not-null="false" />
		<property name="Height" column="Height" type="Int32" not-null="false" />
		<property name="DateAdded" column="DateAdded" type="Timestamp" not-null="false" />
		<!--The foreign keys-->
		<many-to-one name="Supplier" class="Ets.SingleApi.Model.Repository.SupplierEntity, Ets.SingleApi.Model" column="SupplierID" />
	</class>
</hibernate-mapping>