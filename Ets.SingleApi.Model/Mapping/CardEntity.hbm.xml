<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
	<class name="Ets.SingleApi.Model.Repository.CardEntity, Ets.SingleApi.Model" table="Card" dynamic-update="true" optimistic-lock="all" >
	 <!--The cache-->
	 <cache usage="read-write"/>
	 <!--The primary keys-->
		<id name="CardId" column="CardID" type="Int32" >
			<generator class="native"/>
		</id>
		<!--The propertys-->
		<property name="CardTypeId" column="CardTypeID" type="Int32" not-null="false" />
		<property name="CardNo" column="CardNo" type="String" />
		<property name="CardHolderName" column="CardHolderName" type="String" />
		<property name="CardValIdFromDate" column="CardValidFromDate" type="Timestamp" not-null="false" />
		<property name="CardExpiryDate" column="CardExpiryDate" type="Timestamp" />
		<property name="IssueNo" column="IssueNo" type="Int32" not-null="false" />
		<property name="CardSecurityCode" column="CardSecurityCode" type="Int32" />
		<property name="IsDefault" column="IsDefault" type="Boolean" not-null="false" />
		<!--The foreign keys-->
		<many-to-one name="Customer" class="Ets.SingleApi.Model.Repository.CustomerEntity, Ets.SingleApi.Model" column="CustomerID" />
	</class>
</hibernate-mapping>