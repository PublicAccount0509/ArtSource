<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
	<class name="Ets.SingleApi.Model.Repository.OptionGroupEntity, Ets.SingleApi.Model" table="OptionGroup" dynamic-update="true" optimistic-lock="all" >
	 <!--The cache-->
	 <cache usage="read-write"/>
	 <!--The primary keys-->
		<id name="OptionGroupId" column="OptionGroupID" type="Int32" >
			<generator class="native"/>
		</id>
		<!--The propertys-->
		<property name="OptionGroupTitle" column="OptionGroupTitle" type="String" />
		<property name="Description" column="Description" type="String" not-null="false" />
		<property name="IsMultiple" column="IsMultiple" type="Boolean" not-null="false" />
    <property name="OptionUnit" column="OptionUnit" type="String" not-null="false" />
    <property name="FreeNum" column="FreeNum" type="Int32" not-null="false" />
    <property name="IsMandatory" column="IsMandatory" type="Boolean" not-null="false" />
    <property name="SortID" column="SortID" type="Int32" not-null="false" />
    <!--The foreign keys-->
		<bag name="CustomizationOptionList" cascade="none" lazy="true" table="CustomizationOption">
			<key column="OptionGroupID" />
			<one-to-many class="Ets.SingleApi.Model.Repository.CustomizationOptionEntity, Ets.SingleApi.Model" />
		</bag>
	</class>
</hibernate-mapping>