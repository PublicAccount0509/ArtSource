<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
	<class name="Ets.SingleApi.Model.Repository.MarketingMessageEntity, Ets.SingleApi.Model" table="MarketingMessage" dynamic-update="true" optimistic-lock="all" >
	 <!--The cache-->
	 <cache usage="read-write"/>
	 <!--The primary keys-->
		<id name="MarketingMessageId" column="MarketingMessageID" type="Int32" >
			<generator class="native"/>
		</id>
		<!--The propertys-->
		<property name="Title" column="Title" type="String" not-null="false" />
		<property name="Content" column="Content" type="String" not-null="false" />
		<property name="AddDateTime" column="AddDateTime" type="Timestamp" not-null="false" />
		<!--The foreign keys-->
		<bag name="MarketingLogList" cascade="none" lazy="true" table="MarketingLog">
			<key column="MarketingMessageID" />
			<one-to-many class="Ets.SingleApi.Model.Repository.MarketingLogEntity, Ets.SingleApi.Model" />
		</bag>
		<many-to-one name="Supplier" class="Ets.SingleApi.Model.Repository.SupplierEntity, Ets.SingleApi.Model" column="SupplierID" />
	</class>
</hibernate-mapping>