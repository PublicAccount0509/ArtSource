<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
	<class name="Ets.SingleApi.Model.Repository.MenuLayoutSupplierEntity, Ets.SingleApi.Model" table="MenuLayoutSupplier" dynamic-update="true" optimistic-lock="all" >
	 <!--The cache-->
	 <cache usage="read-write"/>
	 <!--The primary keys-->
		<id name="Id" column="Id" type="Int32" >
			<generator class="native"/>
		</id>
		<!--The propertys-->
		<property name="SortOrder" column="SortOrder" type="Int32" not-null="false" />
		<property name="CategoryId" column="CategoryID" type="Int32" not-null="false" />
		<!--The foreign keys-->
		<bag name="MenuLayoutDishList" cascade="none" lazy="true" table="MenuLayoutDish">
			<key column="LayoutSupplierId" />
			<one-to-many class="Ets.SingleApi.Model.Repository.MenuLayoutDishEntity, Ets.SingleApi.Model" />
		</bag>
		<many-to-one name="LayoutStyleCode" class="Ets.SingleApi.Model.Repository.MenuLayoutStyleEntity, Ets.SingleApi.Model" column="LayoutStyleCode" />
		<many-to-one name="Supplier" class="Ets.SingleApi.Model.Repository.SupplierEntity, Ets.SingleApi.Model" column="SupplierId" />
	</class>
</hibernate-mapping>