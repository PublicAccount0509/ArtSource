<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
	<class name="Ets.SingleApi.Model.Repository.AwardEntity, Ets.SingleApi.Model" table="Award" dynamic-update="true" optimistic-lock="all" >
	 <!--The cache-->
	 <cache usage="read-write"/>
	 <!--The primary keys-->
		<id name="AwardId" column="AwardID" type="Int32" >
			<generator class="native"/>
		</id>
		<!--The propertys-->
		<property name="AwardName" column="AwardName" type="String" not-null="false" />
		<property name="AwardDescription" column="AwardDescription" type="String" not-null="false" />
		<property name="AwardDate" column="AwardDate" type="Timestamp" />
		<property name="AwardSponsor" column="AwardSponsor" type="String" not-null="false" />
		<!--The foreign keys-->
		<bag name="ChefList" cascade="none" lazy="true" table="Chef">
			<key column="AwardID" />
			<one-to-many class="Ets.SingleApi.Model.Repository.ChefEntity, Ets.SingleApi.Model" />
		</bag>
	</class>
</hibernate-mapping>