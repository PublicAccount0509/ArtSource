<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
	<class name="Ets.SingleApi.Model.Repository.VacancyEntity, Ets.SingleApi.Model" table="Vacancy" dynamic-update="true" optimistic-lock="all" >
