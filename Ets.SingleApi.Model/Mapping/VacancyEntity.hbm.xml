		<id name="VacancyId" column="VacancyID" type="Int32" >
			<generator class="native"/>
		</id>
		<!--The propertys-->
		<property name="JobTitleId" column="JobTitleID" type="Int32" />
		<property name="Quantity" column="Quantity" type="Int32" />
		<property name="JobTypeId" column="JobTypeID" type="Int32" />
		<property name="JobSpec" column="JobSpec" type="String" />
		<property name="StartDate" column="StartDate" type="String" not-null="false" />
		<property name="SalaryRate" column="SalaryRate" type="String" not-null="false" />
		<property name="Contact" column="Contact" type="String" not-null="false" />
		<property name="Telephone" column="Telephone" type="String" not-null="false" />
		<property name="Fax" column="Fax" type="String" not-null="false" />
		<property name="Email" column="Email" type="String" not-null="false" />
		<property name="Reference" column="Reference" type="String" not-null="false" />
		<property name="DateAdded" column="DateAdded" type="Timestamp" not-null="false" />
		<property name="Online" column="Online" type="Boolean" not-null="false" />
		<!--The foreign keys-->
		<many-to-one name="Supplier" class="Ets.SingleApi.Model.Repository.SupplierEntity, Ets.SingleApi.Model" column="SupplierID" />
	</class>
</hibernate-mapping>