<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
	<class name="Ets.SingleApi.Model.Repository.SupplierGroupLightEntity, Ets.SingleApi.Model" table="SupplierGroupLight" dynamic-update="true" optimistic-lock="all" >
	 <!--The cache-->
	 <cache usage="read-write"/>
	 <!--The primary keys-->
		<id name="SupplierGroupLightId" column="SupplierGroupLightId" type="Int32" >
			<generator class="native"/>
		</id>
		<!--The propertys-->
		<property name="TargetId" column="TargetId" type="Int32" />
		<property name="Name" column="Name" type="String" />
		<property name="Telphone" column="Telphone" type="String" not-null="false" />
		<property name="LogoUrl" column="LogoUrl" type="String" not-null="false" />
		<property name="Description" column="Description" type="String" not-null="false" />
		<property name="ServiceNote" column="ServiceNote" type="String" not-null="false" />
		<property name="BrandStory" column="BrandStory" type="String" not-null="false" />
		<property name="RecommendDishes" column="RecommendDishes" type="String" not-null="false" />
		<property name="CreateDate" column="CreateDate" type="Timestamp" />
		<!--The foreign keys-->
		<bag name="SupplierGroupAdvertisementList" cascade="none" lazy="true" table="SupplierGroupAdvertisement">
			<key column="SupplierGroupLightId" />
			<one-to-many class="Ets.SingleApi.Model.Repository.SupplierGroupAdvertisementEntity, Ets.SingleApi.Model" />
		</bag>
		<bag name="SupplierGroupFeatureList" cascade="none" lazy="true" table="SupplierGroupFeature">
			<key column="SupplierGroupLight" />
			<one-to-many class="Ets.SingleApi.Model.Repository.SupplierGroupFeatureEntity, Ets.SingleApi.Model" />
		</bag>
		<bag name="SupplierGroupLogoImageList" cascade="none" lazy="true" table="SupplierGroupLogoImage">
			<key column="SupplierGroupLightId" />
			<one-to-many class="Ets.SingleApi.Model.Repository.SupplierGroupLogoImageEntity, Ets.SingleApi.Model" />
		</bag>
		<many-to-one name="LightApplication" class="Ets.SingleApi.Model.Repository.BaiDuAppLightEntity, Ets.SingleApi.Model" column="LightApplicationId" />
	</class>
</hibernate-mapping>