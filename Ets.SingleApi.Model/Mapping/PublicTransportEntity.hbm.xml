<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
	<class name="Ets.SingleApi.Model.Repository.PublicTransportEntity, Ets.SingleApi.Model" table="PublicTransport" dynamic-update="true" optimistic-lock="all" >
	 <!--The cache-->
	 <cache usage="read-write"/>
	 <!--The primary keys-->
		<id name="PublicTransportId" column="PublicTransportID" type="Int32" >
			<generator class="native"/>
		</id>
		<!--The propertys-->
		<property name="PublicTransportName" column="PublicTransportName" type="String" />
		<property name="PublicTransportType" column="PublicTransportType" type="String" />
		<!--The foreign keys-->
		<bag name="SupplierTransportList" cascade="none" lazy="true" table="SupplierTransport">
			<key column="PublicTransportID" />
			<one-to-many class="Ets.SingleApi.Model.Repository.SupplierTransportEntity, Ets.SingleApi.Model" />
		</bag>
		<bag name="TransportStationList" cascade="none" lazy="true" table="TransportStation">
			<key column="PublicTransportID" />
			<one-to-many class="Ets.SingleApi.Model.Repository.TransportStationEntity, Ets.SingleApi.Model" />
		</bag>
		<many-to-one name="City" class="Ets.SingleApi.Model.Repository.AddrCityEntity, Ets.SingleApi.Model" column="CityID" />
	</class>
</hibernate-mapping>