<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
	<class name="Ets.SingleApi.Model.Repository.CampaignEntity, Ets.SingleApi.Model" table="Campaign" dynamic-update="true" optimistic-lock="all" >
	 <!--The cache-->
	 <cache usage="read-write"/>
	 <!--The primary keys-->
		<id name="CampaignId" column="CampaignID" type="Int32" >
			<generator class="native"/>
		</id>
		<!--The propertys-->
		<property name="SupplierId" column="SupplierID" type="Int32" not-null="false" />
		<property name="CampaignName" column="CampaignName" type="String" />
		<property name="Description" column="Description" type="String" />
		<property name="Objective" column="Objective" type="String" not-null="false" />
		<property name="RevenueGoal" column="RevenueGoal" type="Decimal" />
		<property name="InventoryGoal" column="InventoryGoal" type="Int32" />
		<property name="DateEnd" column="DateEnd" type="Timestamp" />
		<property name="IsActive" column="IsActive" type="Boolean" />
		<property name="CreatedOn" column="CreatedOn" type="Timestamp" not-null="false" />
		<property name="CreatedBy" column="CreatedBy" type="String" />
		<property name="ModifiedOn" column="ModifiedOn" type="Timestamp" not-null="false" />
		<property name="ModifiedBy" column="ModifiedBy" type="String" not-null="false" />
		<!--The foreign keys-->
		<bag name="CampaignSupplierList" cascade="none" lazy="true" table="CampaignSupplier">
			<key column="CampaignID" />
			<one-to-many class="Ets.SingleApi.Model.Repository.CampaignSupplierEntity, Ets.SingleApi.Model" />
		</bag>
	</class>
</hibernate-mapping>