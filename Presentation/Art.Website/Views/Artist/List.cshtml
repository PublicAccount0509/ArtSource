<script type="text/javascript">
    $(document).ready(function() {
        var adminjs = new adminglass(); //实例化后台js类
        //关闭弹层
        $(document).on("click", ".J_closebox", function() {
            var box = $(this).closest(".add-openbox");
            adminjs.closewinbox(box);
        });
        //input文字交互
        adminjs.inpFocusBlur('.J_addflinp');
        var viewInstance = new art.ui.view.ArtistList();
        viewInstance.init();
    });
</script>
