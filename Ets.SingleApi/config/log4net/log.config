<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <log4net>
    <!-- OFF, FATAL, ERROR, WARN, INFO, DEBUG, ALL -->
    <!-- Set root logger level to ERROR and its appenders -->
    <!--<root>
      <level value="ALL"/>
      <appender-ref ref="SysAppender"/>
    </root>-->
    <logger name="Ets.SingleApi.WapControllers">
      <level value="DEBUG"/>
      <appender-ref ref="WapControllersAppender" />
    </logger>

    <logger name="Ets.SingleApi.Controllers">
      <level value="DEBUG"/>
      <appender-ref ref="ControllersAppender" />
    </logger>

    <logger name="Ets.SingleApi.Services">
      <level value="DEBUG"/>
      <appender-ref ref="ServicesAppender" />
    </logger>

    <logger name="Ets.SingleApi.DetailServices">
      <level value="DEBUG"/>
      <appender-ref ref="DetailServicesAppender" />
    </logger>

    <logger name="Ets.SingleApi.SmsExternalServices">
      <level value="DEBUG"/>
      <appender-ref ref="SmsExternalServicesAppender" />
    </logger>

    <logger name="Ets.SingleApi.Cache">
      <level value="DEBUG"/>
      <appender-ref ref="CacheAppender" />
    </logger>

    <logger name="NHibernate">
      <level value="OFF"/>
      <appender-ref ref="NHibernateAppender" />
    </logger>

    <!--The format recording the log of IBB-->
    <appender name="WapControllersAppender" type="log4net.Appender.RollingFileAppender,log4net" >
      <param name="File" value="Logs/WapControllers" />
      <param name="AppendToFile" value="true" />
      <param name="RollingStyle" value="Date" />
      <param name="DatePattern" value="(yyyy-MM-dd)&quot;.txt&quot;" />
      <param name="StaticLogFileName" value="false" />
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="%d [%t] %-5p %c - %m%n" />
        <param name="Header" value="&#13;&#10;----------------------header--------------------------&#13;&#10;" />
        <param name="Footer" value="&#13;&#10;----------------------footer--------------------------&#13;&#10;" />
      </layout>
    </appender>

    <appender name="ControllersAppender" type="log4net.Appender.RollingFileAppender,log4net" >
      <param name="File" value="Logs/Controllers" />
